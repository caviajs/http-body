{
  "name": "root",
  "workspaces": [
    "dist/core",
    "dist/env",
    "dist/http-client",
    "dist/http-server",
    "dist/storage",
    "dist/view"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register jest --runInBand",
    "test:watch": "jest --watch",
    "install": "make install",
    "clear": "make clear",
    "build": "make build",
    "verdaccio:run": "make verdaccio-run",
    "verdaccio:publish": "make verdaccio-publish",
    "release:prod:prerelease": "make VERSION=prerelease release",
    "release:prod:premajor": "make VERSION=premajor release",
    "release:prod:major": "make VERSION=major release",
    "release:prod:preminor": "make VERSION=preminor release",
    "release:prod:minor": "make VERSION=minor release",
    "release:prod:prepatch": "make VERSION=prepatch release",
    "release:prod:patch": "make VERSION=patch release"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^27.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.4",
    "ts-jest": "^27.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "packages"
    ],
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/node_modules/reflect-metadata/Reflect.js"
    ],
    "moduleNameMapper": {
      "@caviajs/core": "<rootDir>/packages/core/index.ts",
      "@caviajs/env": "<rootDir>/packages/env/index.ts",
      "@caviajs/http-client": "<rootDir>/packages/http-client/index.ts",
      "@caviajs/http-server": "<rootDir>/packages/http-server/index.ts",
      "@caviajs/storage": "<rootDir>/packages/storage/index.ts",
      "@caviajs/view": "<rootDir>/packages/view/index.ts"
    }
  }
}
