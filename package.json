{
  "name": "@caviajs/core",
  "description": "next generation framework for node.js",
  "version": "0.0.1",
  "author": "Pawe≈Ç Partyka",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "cavia": "dist/bin.js"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prebuild": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "publish:local": "npm publish --registry=http://localhost:4873/",
    "publish:prod": "npm publish --registry=https://registry.npmjs.org/",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register jest --runInBand",
    "test:watch": "jest --watch",
    "unpublish:local": "npm unpublish --force --registry=http://localhost:4873/",
    "unpublish:prod": "npm unpublish --force --registry=https://registry.npmjs.org/"
  },
  "dependencies": {
    "cli-color": "~2.0.0",
    "dotenv": "~16.0.0",
    "edge.js": "~5.3.2",
    "fs-extra": "~10.0.0",
    "iconv-lite": "~0.6.2",
    "inquirer": "~7.1.0",
    "ioredis": "~5.0.4",
    "is-stream": "~2.0.0",
    "lodash.get": "~4.4.2",
    "matcher": "~3.0.0",
    "node-cron": "~3.0.0",
    "parse-multipart-data": "~1.2.1",
    "path-to-regexp": "~6.2.0",
    "qs": "~6.10.1",
    "yargs": "~17.3.1"
  },
  "devDependencies": {
    "@types/cli-color": "~2.0.0",
    "@types/fs-extra": "~9.0.13",
    "@types/jest": "~27.4.0",
    "@types/lodash.get": "~4.4.6",
    "@types/node": "~16.11.7",
    "@types/node-cron": "^3.0.1",
    "@types/qs": "~6.9.6",
    "@types/yargs": "~17.0.9",
    "@typescript-eslint/eslint-plugin": "~4.21.0",
    "@typescript-eslint/parser": "~4.21.0",
    "eslint": "~7.24.0",
    "jest": "~27.1.1",
    "reflect-metadata": "~0.1.13",
    "rimraf": "~3.0.2",
    "rxjs": "~7.5.4",
    "ts-jest": "~27.1.2",
    "ts-node": "~9.1.1",
    "typescript": "~4.2.4"
  },
  "peerDependencies": {
    "reflect-metadata": "~0.1.13",
    "rxjs": "~7.5.4"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src"
    ],
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/node_modules/reflect-metadata/Reflect.js"
    ]
  }
}
