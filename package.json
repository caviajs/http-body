{
  "name": "root",
  "workspaces": [
    "packages/core",
    "packages/env",
    "packages/http-client",
    "packages/http-server",
    "packages/storage",
    "packages/view"
  ],
  "scripts": {
    "bootstrap": "make install",
    "build": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register jest --runInBand",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "jest": "^27.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.4",
    "ts-jest": "^27.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "packages"
    ],
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/node_modules/reflect-metadata/Reflect.js"
    ],
    "moduleNameMapper": {
      "@caviajs/core": "<rootDir>/packages/core/src/public-api.ts",
      "@caviajs/env": "<rootDir>/packages/env/src/public-api.ts",
      "@caviajs/http-client": "<rootDir>/packages/http-client/src/public-api.ts",
      "@caviajs/http-server": "<rootDir>/packages/http-server/src/public-api.ts",
      "@caviajs/storage": "<rootDir>/packages/storage/src/public-api.ts",
      "@caviajs/view": "<rootDir>/packages/view/src/public-api.ts"
    }
  }
}
