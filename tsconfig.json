{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "baseUrl": ".",
    "sourceMap": true,
    "incremental": true,
    "lib": [
      "es2020"
    ],
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@caviajs/core": ["./packages/core"],
      "@caviajs/core/*": ["./packages/core/*"],
      "@caviajs/env": ["./packages/env"],
      "@caviajs/env/*": ["./packages/env/*"],
      "@caviajs/http-client": ["./packages/http-client"],
      "@caviajs/http-client/*": ["./packages/http-client/*"],
      "@caviajs/http-server": ["./packages/http-server"],
      "@caviajs/http-server/*": ["./packages/http-server/*"],
      "@caviajs/storage": ["./packages/storage"],
      "@caviajs/storage/*": ["./packages/storage/*"],
      "@caviajs/view": ["./packages/view"],
      "@caviajs/view/*": ["./packages/view/*"]
    }
  }
}
