{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "baseUrl": ".",
    "sourceMap": true,
    "incremental": true,
    "lib": [
      "es2020"
    ],
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@caviajs/core": [
        "packages/core/src/public-api.ts"
      ],
      "@caviajs/env": [
        "packages/env/src/public-api.ts"
      ],
      "@caviajs/http-client": [
        "packages/http-client/src/public-api.ts"
      ],
      "@caviajs/http-server": [
        "packages/http-server/src/public-api.ts"
      ],
      "@caviajs/storage": [
        "packages/storage/src/public-api.ts"
      ],
      "@caviajs/view": [
        "packages/view/src/public-api.ts"
      ]
    }
  }
}
